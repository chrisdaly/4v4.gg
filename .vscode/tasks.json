{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Chat Relay",
      "type": "shell",
      "command": "lsof -ti:3002 | xargs kill -9 2>/dev/null; cd server && ADMIN_API_KEY=localdev node src/index.js",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "dev",
        "reveal": "always"
      }
    },
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "npm run dev -- --port 3001",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "dev",
        "reveal": "always"
      }
    },
    {
      "label": "4v4 Dev",
      "dependsOn": ["Chat Relay", "Dev Server"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
